{
  "$schema": "https://json-schema.org/draft-07/schema",

  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "clientId": {
      "type": "string"
    },
    "clientSecret": {
      "type": "string"
    },
    "scope": {
      "type": "string"
    },
    "tokenEndpoint": {
      "type": "string"
    },
    "username": {
      "type": "string"
    },
    "password": {
      "type": "string"
    },
    "bodyFormat": {
      "type": "string",
      "enum": ["applicationJson", "formUrlEncoded"]
    }
  },
  "required": [
    "name",
    "clientId",
    "clientSecret",
    "tokenEndpoint",
    "username",
    "password"
  ],
  "additionalProperties": false
}
