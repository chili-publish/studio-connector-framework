{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "displayName": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["media"]
    },
    "iconUrl": {
      "type": "string"
    },
    "options": {
      "type": "object"
    },
    "supportedAuth": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "chili",
          "staticKey",
          "oAuth2ClientCredentials",
          "oAuth2ResourceOwnerPassword",
          "oAuth2AuthorizationCode"
        ]
      }
    },
    "mappings": {
      "type": "object"
    }
  },
  "additionalProperties": false,
  "required": ["type", "options", "supportedAuth"]
}
